package interfaz;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;

import logica.Conexion;
import logica.Usuario;

import java.awt.SystemColor;
import javax.swing.JLabel;
import javax.swing.JButton;
import javax.swing.ImageIcon;
import javax.swing.JTextField;
import java.awt.Font;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import java.awt.Toolkit;
import javax.swing.JTextArea;
import javax.swing.JList;
import java.awt.Color;
import java.awt.event.KeyAdapter;
import java.awt.event.KeyEvent;

public class VentanaIngresarProductos extends JFrame {

	private JPanel contentPane;
	private JTextField textField;
	private JTextField textField_1;
	Conexion conexion;
	Usuario user;

	/**
	 * Create the frame.
	 */
	public VentanaIngresarProductos(Conexion conexion, Usuario user) {
		
		this.conexion=conexion;
		this.user=user;
		
		setIconImage(Toolkit.getDefaultToolkit().getImage(VentanaIngresarProductos.class.getResource("/imagenes/Logo viejo.png")));
		setTitle("Ingresar Productos");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 300);
		contentPane = new JPanel();
		contentPane.setBackground(SystemColor.text);
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		contentPane.setLayout(new BorderLayout(0, 0));
		setContentPane(contentPane);
		
		JPanel panel = new JPanel();
		panel.setBackground(SystemColor.text);
		contentPane.add(panel, BorderLayout.CENTER);
		panel.setLayout(null);
		
		JLabel lblCantidad = new JLabel("Cantidad");
		lblCantidad.setFont(new Font("Tw Cen MT Condensed Extra Bold", Font.PLAIN, 14));
		lblCantidad.setBounds(10, 124, 74, 14);
		panel.add(lblCantidad);
		
		JLabel lblIdentificador = new JLabel("Identificador");
		lblIdentificador.setFont(new Font("Tw Cen MT Condensed Extra Bold", Font.PLAIN, 14));
		lblIdentificador.setBounds(10, 86, 74, 14);
		panel.add(lblIdentificador);
		
		JButton btnCrear = new JButton("Agregar");
		btnCrear.addKeyListener(new KeyAdapter() {
			@Override
			public void keyTyped(KeyEvent e) {
				char tecla = e.getKeyChar();
				if (tecla == KeyEvent.VK_ENTER) {
					btnCrear.doClick();
				}
			}
		});
		btnCrear.setFont(new Font("Tw Cen MT Condensed Extra Bold", Font.PLAIN, 14));
		btnCrear.setBounds(226, 217, 89, 23);
		panel.add(btnCrear);
		
		JButton btnVolver = new JButton("Volver");
		btnVolver.addKeyListener(new KeyAdapter() {
			@Override
			public void keyTyped(KeyEvent e) {
				char tecla = e.getKeyChar();
				if (tecla == KeyEvent.VK_ENTER) {
					btnVolver.doClick();
				}
			}
		});
		btnVolver.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				VentanaMenuVender menu=new VentanaMenuVender(conexion,user);
				menu.setVisible(true);
				dispose();
			}
		});
		btnVolver.setFont(new Font("Tw Cen MT Condensed Extra Bold", Font.PLAIN, 14));
		btnVolver.setBounds(325, 217, 89, 23);
		panel.add(btnVolver);
		
		JButton btnEliminar = new JButton("Eliminar");
		btnEliminar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
			}
		});
		btnEliminar.addKeyListener(new KeyAdapter() {
			@Override
			public void keyTyped(KeyEvent e) {
				char tecla = e.getKeyChar();
				if (tecla == KeyEvent.VK_ENTER) {
					btnEliminar.doClick();
				}
			}
		});
		btnEliminar.setFont(new Font("Tw Cen MT Condensed Extra Bold", Font.PLAIN, 14));
		btnEliminar.setBounds(127, 217, 89, 23);
		panel.add(btnEliminar);
		
		textField = new JTextField();
		textField.setFont(new Font("Tw Cen MT Condensed", Font.PLAIN, 14));
		textField.setBounds(94, 84, 122, 20);
		panel.add(textField);
		textField.setColumns(10);
		
		textField_1 = new JTextField();
		textField_1.setFont(new Font("Tw Cen MT Condensed", Font.PLAIN, 14));
		textField_1.setBounds(94, 121, 122, 20);
		panel.add(textField_1);
		textField_1.setColumns(10);
		
		JList list = new JList();
		list.setBackground(Color.LIGHT_GRAY);
		list.setBounds(226, 11, 188, 195);
		panel.add(list);
		
		JLabel lblTotal = new JLabel("Total");
		lblTotal.setFont(new Font("Tw Cen MT Condensed Extra Bold", Font.PLAIN, 20));
		lblTotal.setBounds(10, 28, 74, 14);
		panel.add(lblTotal);
		
		JLabel lblValorUnitario = new JLabel("Valor Unitario");
		lblValorUnitario.setFont(new Font("Tw Cen MT Condensed Extra Bold", Font.PLAIN, 14));
		lblValorUnitario.setBounds(10, 159, 89, 14);
		panel.add(lblValorUnitario);
		
		JLabel label = new JLabel("$0");
		label.setFont(new Font("Tw Cen MT Condensed", Font.PLAIN, 20));
		label.setBounds(94, 29, 122, 14);
		panel.add(label);
		
		JLabel label_1 = new JLabel("$0");
		label_1.setFont(new Font("Tw Cen MT Condensed", Font.PLAIN, 20));
		label_1.setBounds(94, 160, 122, 14);
		panel.add(label_1);
	}
}
